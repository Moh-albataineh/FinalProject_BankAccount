<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            styleClass="root-pane"
            stylesheets="@bank-styles.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="General.BankGUIController">

    <!-- LEFT: Create New Account -->
    <left>
        <VBox styleClass="panel-container" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="15.0" bottom="20.0" left="20.0"/>
            </padding>

            <VBox styleClass="card-panel" spacing="15.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <Label text="Create New Account" styleClass="section-title"/>
                <Separator styleClass="section-separator"/>

                <VBox spacing="8.0">
                    <Label text="Owner Name:" styleClass="field-label"/>
                    <TextField fx:id="ownerNameField" 
                              promptText="Enter owner name"
                              styleClass="text-input"/>
                </VBox>

                <VBox spacing="8.0">
                    <Label text="Initial Balance:" styleClass="field-label"/>
                    <TextField fx:id="initialBalanceField" 
                              promptText="0.00"
                              styleClass="text-input"/>
                </VBox>

                <Region VBox.vgrow="ALWAYS"/>

                <Button fx:id="createAccountButton"
                        text="Create Account"
                        styleClass="btn-primary"
                        maxWidth="Infinity"
                        mnemonicParsing="false"/>
            </VBox>
        </VBox>
    </left>

    <!-- CENTER: Account Operations + Transfer + Management -->
    <center>
        <VBox styleClass="panel-container" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="15.0" bottom="20.0" left="15.0"/>
            </padding>

            <VBox styleClass="card-panel" spacing="15.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <!-- Main Title -->
                <Label text="Account Operations" styleClass="section-title"/>
                <Separator styleClass="section-separator"/>

                <!-- Common Inputs Section -->
                <VBox spacing="12.0">
                    <VBox spacing="8.0">
                        <Label text="Account Number:" styleClass="field-label"/>
                        <TextField fx:id="accountNumberField" 
                                  promptText="Enter account #"
                                  styleClass="text-input"/>
                    </VBox>

                    <VBox spacing="8.0">
                        <Label text="Amount:" styleClass="field-label"/>
                        <TextField fx:id="amountField" 
                                  promptText="0.00"
                                  styleClass="text-input"/>
                    </VBox>
                </VBox>

                <!-- Basic Operations -->
                <VBox spacing="10.0">
                    <HBox spacing="12.0">
                        <Button fx:id="depositButton" 
                               text="Deposit" 
                               styleClass="btn-success"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                        <Button fx:id="withdrawButton" 
                               text="Withdraw" 
                               styleClass="btn-danger"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                    </HBox>

                    <HBox spacing="12.0">
                        <Button fx:id="showBalanceButton" 
                               text="Show Balance" 
                               styleClass="btn-secondary"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                        <Button fx:id="showStatementButton" 
                               text="Show Statement" 
                               styleClass="btn-secondary"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                    </HBox>
                </VBox>

                <Separator styleClass="section-separator"/>

                <!-- Transfer Section -->
                <VBox spacing="12.0">
                    <Label text="Transfer Funds" styleClass="subsection-title"/>
                    
                    <VBox spacing="8.0">
                        <Label text="Target Account #:" styleClass="field-label"/>
                        <TextField fx:id="targetAccountField" 
                                  promptText="Destination account"
                                  styleClass="text-input"/>
                    </VBox>

                    <Button fx:id="transferButton"
                            text="Transfer"
                            styleClass="btn-warning"
                            maxWidth="Infinity"
                            mnemonicParsing="false"/>
                </VBox>

                <Separator styleClass="section-separator"/>

                <!-- Account Management Section -->
                <VBox spacing="12.0">
                    <Label text="Account Management" styleClass="subsection-title"/>
                    
                    <VBox spacing="8.0">
                        <Label text="New Owner Name:" styleClass="field-label"/>
                        <TextField fx:id="newOwnerNameField" 
                                  promptText="Enter new name"
                                  styleClass="text-input"/>
                    </VBox>

                    <HBox spacing="12.0">
                        <Button fx:id="changeOwnerButton" 
                               text="Change Owner" 
                               styleClass="btn-info"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                        <Button fx:id="removeAccountButton" 
                               text="Remove Account" 
                               styleClass="btn-danger-outline"
                               HBox.hgrow="ALWAYS" 
                               maxWidth="Infinity"
                               mnemonicParsing="false"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>

    <!-- RIGHT: Information Display -->
    <right>
        <VBox styleClass="panel-container" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="15.0"/>
            </padding>

            <VBox styleClass="card-panel" spacing="15.0" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <Label text="Information Display" styleClass="section-title"/>
                <Separator styleClass="section-separator"/>

                <TextArea fx:id="outputArea"
                          styleClass="output-area"
                          prefRowCount="30"
                          prefColumnCount="40"
                          wrapText="true"
                          editable="false"
                          promptText="Welcome to Bank Management System&#10;================================&#10;&#10;Output and transaction details will appear here..."
                          VBox.vgrow="ALWAYS"/>
            </VBox>
        </VBox>
    </right>

    <!-- BOTTOM: Global Action Buttons -->
    <bottom>
        <HBox styleClass="bottom-bar" spacing="15.0" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
            </padding>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="showAllAccountsButton"
                    text="Show All Accounts"
                    styleClass="btn-accent"
                    prefWidth="180.0"
                    mnemonicParsing="false"/>

            <Button fx:id="clearOutputButton"
                    text="Clear Output"
                    styleClass="btn-neutral"
                    prefWidth="140.0"
                    mnemonicParsing="false"/>

            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>